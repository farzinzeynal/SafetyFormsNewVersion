<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_layoutaw_3241"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="5"
                        android:hint="Yoxlama tarixi">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autocomptext_inspect_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingLeft="11dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="13dp"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txyouawt_67585"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:hint="Başlama vaxtı"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autocomptext_inspect_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingLeft="11dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="13dp"
                            android:textSize="16sp" />


                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll1"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtlayout_67585"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="4"
                        android:hint="Dövlət nömrə nişanı"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autocomptext_plateNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic__drop_down_30"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingLeft="11dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll2"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtlayout5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="5"
                        android:hint="Cihazın İdetntifikasiya №-si"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autocomptext_device_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic__drop_down_30"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingLeft="11dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_laytaw_3we241"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="6"
                        android:hint="İstehsal tarixi">


                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autocomptext_manuf_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingLeft="11dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="13dp"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll3"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_laytaw_3241"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="6"
                        android:hint="Modeli">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittxt_rig_model"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txyou67585"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:hint="Tipi"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittxt_rig_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <include
                    android:id="@+id/divier1"
                    layout="@layout/divider_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/ll4"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp" />


                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divier1"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtlayou585"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="4"
                        android:hint="Qazmaçının adı"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autocomptext_drillman_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/ic__drop_down_30"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingLeft="11dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="15sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_laytawe241"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="8"
                        android:hint="Vəsiqənin etibarlılıq tarixi">


                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/autocomptext_lisence_expire"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="none"
                            android:paddingLeft="11dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="13dp"
                            android:textSize="15sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <include
                    android:id="@+id/divier2"
                    layout="@layout/divider_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/ll5"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp" />

                <LinearLayout
                    android:id="@+id/ll6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divier2"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txyo7585"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:hint="Şirkətin adı">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittxt_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll6"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txyo7iuyi585"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="5"
                        android:hint="İşləmə saatı">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edittxt_work_hour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="numberSigned"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:textSize="15dp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <include
                    android:id="@+id/divier3"
                    layout="@layout/divider_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/ll7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp" />

                <LinearLayout
                    android:id="@+id/ll8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divier3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Şəkillər :"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/recycler_images_rig"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>


                    <Button
                        android:id="@+id/button_take_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="#FF959595"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/ic__camera_alt_24"
                        android:text="Take photo" />


                </LinearLayout>


                <Button
                    android:id="@+id/button_next_from_first"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll8"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="Növbəti"
                    android:textAllCaps="false"
                    />

            </RelativeLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>